@{
    ViewBag.Title = "Specification";
}
<script src="~/Scripts/LoadJsonFunc/LoadProdSpec.js"></script>

<!-- Page Header Start -->
<div class="container-fluid page-header py-3 mb-5 wow fadeIn" data-wow-delay="0.1s">
    <div class="container py-3">
        <h1 class="display-1 text-white animated slideInDown">Kandla Grey</h1>
        <nav aria-label="breadcrumb animated slideInDown">
            <ol class="breadcrumb text-uppercase mb-0">
                <li class="breadcrumb-item"><a class="text-white" href="#">Home</a></li>
                <li class="breadcrumb-item"><a class="text-white" href="#">Products</a></li>
                <li class="breadcrumb-item"><a class="text-white" href="#">Tiles</a></li>
