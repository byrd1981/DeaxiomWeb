                <li class="breadcrumb-item text-primary active" aria-current="page">Specification</li>
            </ol>
        </nav>
    </div>
</div>
<!-- Page Header End -->
<!-- About Start -->
<div class="container-xxl">
    <div class="container">
        <div class="row g-5">
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.1s">
                <img class="img-fluid" src="~/Content/img/categories/O/1.jpg" alt="">
            </div>
            <div class="col-lg-6 wow fadeIn" data-wow-delay="0.5s">
                <div class="product-specification">
                    <h2>Specification</h2>
                    <table id="tblspec" class="table table-bordered">
                        <tbody>
                            <tr>
                                <td>Size (mm)</td>
                                <td>
                                    
                                </td>
                            </tr>
                            <tr>
                                <td>Color</td>
                                <td>
                                    Grey
                                </td>
                            </tr>
                            @*<tr>
                                    <td>Finish</td>
                                    <td>
                                        Satin
                                    </td>
                                </tr>*@
                            <tr>
                                <td>Material</td>
                                <td>
                                    Porcelain
                                </td>
                            </tr>
                            @*<tr>
                                    <td>Style</td>
                                    <td>
                                        Marble
                                    </td>
                                </tr>*@
                            <tr>
                                <td>Suitability</td>
                                <td>
                                    Outdoor
                                </td>
                            </tr>
                            <tr>
                                <td>Thickness</td>
                                <td>
                                    20mm
                                </td>
                            </tr>
                            <tr>
                                <td>Tiles Type</td>
                                <td>
                                    Floor tiles
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div><br />
    </div>
</div>

